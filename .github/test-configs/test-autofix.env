# Super-Linter Test Configuration - Auto-Fix
# Purpose: Test auto-fix mode for supported linters
# Use case: Automated PR improvements and formatting

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
VALIDATE_ALL_CODEBASE=false
DEFAULT_BRANCH=main
DISABLE_ERRORS=false
LOG_LEVEL=DEBUG
CREATE_LOG_FILE=true

# =============================================================================
# AUTO-FIX MODE - ENABLED FOR SUPPORTED LINTERS
# =============================================================================

# Shell/Bash - Enable formatting
FIX_BASH=true
FIX_BASH_EXEC=false

# JavaScript/TypeScript - Enable ESLint fixes
FIX_JAVASCRIPT_ES=true
FIX_TYPESCRIPT_ES=true

# Markdown - Enable markdownlint fixes
FIX_MARKDOWN=true

# Python - Enable formatting
FIX_PYTHON_BLACK=true
FIX_PYTHON_ISORT=true

# YAML - Enable yamllint fixes
FIX_YAML=true

# Note: Not all linters support auto-fix
# These are disabled because they don't have fix modes:
# - FIX_GO (not supported)
# - FIX_RUST (not supported)
# - FIX_DOCKER (not supported)

# =============================================================================
# VALIDATORS - MATCH AUTO-FIX CAPABILITIES
# =============================================================================

# Shell/Bash
VALIDATE_BASH=true
VALIDATE_SHELL_SHFMT=true

# Docker (validate only, no fix)
VALIDATE_DOCKER=true

# Editor Configuration
VALIDATE_EDITORCONFIG=true

# CI/CD
VALIDATE_GITHUB_ACTIONS=true

# Go (validate only, no fix)
VALIDATE_GO=true

# Web Technologies
VALIDATE_HTML=true
VALIDATE_JAVASCRIPT_ES=true
VALIDATE_JAVASCRIPT_STANDARD=true
VALIDATE_TYPESCRIPT_ES=true
VALIDATE_TYPESCRIPT_STANDARD=true

# Configuration Formats
VALIDATE_JSON=true
VALIDATE_YAML=true
VALIDATE_XML=true

# Documentation
VALIDATE_MARKDOWN=true

# Protobuf
VALIDATE_PROTOBUF=true

# Python (5 validators)
VALIDATE_PYTHON_BLACK=true
VALIDATE_PYTHON_FLAKE8=true
VALIDATE_PYTHON_ISORT=true
VALIDATE_PYTHON_MYPY=true
VALIDATE_PYTHON_PYLINT=true

# Rust (validate only, no fix)
VALIDATE_RUST_CLIPPY=true

# =============================================================================
# CONFIGURATION FILES - ALL EXPLICIT PATHS
# =============================================================================

# JavaScript/TypeScript
JAVASCRIPT_ES_CONFIG_FILE=.eslintrc.yml
TYPESCRIPT_ES_CONFIG_FILE=.eslintrc.yml

# Python
PYTHON_BLACK_CONFIG_FILE=.python-black
PYTHON_PYLINT_CONFIG_FILE=.pylintrc

# Markdown
MARKDOWN_CONFIG_FILE=.markdownlint.json

# YAML
YAML_CONFIG_FILE=.yaml-lint.yml

# Rust
RUST_CLIPPY_CONFIG_FILE=clippy.toml

# =============================================================================
# FILTER PATTERNS - STANDARD EXCLUSIONS
# =============================================================================
FILTER_REGEX_EXCLUDE=(vendor/|node_modules/|\.git/|\.vscode/|\.pb\.go$|_pb2\.py$|\.generated\.|\.min\.|\.map$|coverage/|\.tmp/|dist/|build/)

# =============================================================================
# AUTO-FIX SPECIFIC SETTINGS
# =============================================================================

# Git configuration for auto-commit
# (These are typically set in workflow, not here)
# GITHUB_TOKEN: Set by workflow
# GITHUB_ACTOR: Set by workflow

# Commit message for auto-fixes
# This can be customized per workflow run
