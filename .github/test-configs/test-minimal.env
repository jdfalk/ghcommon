# Super-Linter Test Configuration - Minimal
# Purpose: Test basic validation with minimal validators enabled
# Use case: Quick validation of common file types

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
VALIDATE_ALL_CODEBASE=false
DEFAULT_BRANCH=main
DISABLE_ERRORS=false
LOG_LEVEL=INFO
CREATE_LOG_FILE=true

# =============================================================================
# AUTO-FIX MODE - DISABLED FOR MINIMAL TESTING
# =============================================================================
FIX_BASH=false
FIX_MARKDOWN=false
FIX_YAML=false

# =============================================================================
# VALIDATORS - MINIMAL SET (3 validators)
# =============================================================================

# Documentation
VALIDATE_MARKDOWN=true

# Configuration formats
VALIDATE_YAML=true
VALIDATE_JSON=true

# Disable all other validators
VALIDATE_BASH=false
VALIDATE_DOCKER=false
VALIDATE_EDITORCONFIG=false
VALIDATE_GITHUB_ACTIONS=false
VALIDATE_GO=false
VALIDATE_HTML=false
VALIDATE_JAVASCRIPT_ES=false
VALIDATE_JAVASCRIPT_STANDARD=false
VALIDATE_TYPESCRIPT_ES=false
VALIDATE_TYPESCRIPT_STANDARD=false
VALIDATE_PROTOBUF=false
VALIDATE_PYTHON_BLACK=false
VALIDATE_PYTHON_FLAKE8=false
VALIDATE_PYTHON_ISORT=false
VALIDATE_PYTHON_MYPY=false
VALIDATE_PYTHON_PYLINT=false
VALIDATE_RUST_CLIPPY=false
VALIDATE_SHELL_SHFMT=false
VALIDATE_XML=false

# =============================================================================
# CONFIGURATION FILES - MINIMAL SET
# =============================================================================
# All config files are in the root directory of the ghcommon repository
# (not in .github/linters/ like some other repositories)
MARKDOWN_CONFIG_FILE=.markdownlint.json
YAML_CONFIG_FILE=.yaml-lint.yml
JSCPD_CONFIG_FILE=.jscpd.json
# JSON uses default configuration (no config file needed)

# =============================================================================
# FILTER PATTERNS - STANDARD EXCLUSIONS
# =============================================================================
FILTER_REGEX_EXCLUDE=(vendor/|node_modules/|\.git/|\.vscode/|\.pb\.go$|_pb2\.py$|\.generated\.|\.min\.|\.map$|coverage/|\.tmp/|dist/|build/)
